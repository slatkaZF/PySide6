import sys
from PySide6.QtWidgets import QApplication, QMainWindow
from ui_weather_app import Ui_MainWindow  # Importiert deine UI-Klasse
from controller import WeatherController  # Später erstellen

class WeatherApp(QMainWindow):
    def __init__(self):
        super().__init__()
        self.ui = Ui_MainWindow()
        self.ui.setupUi(self)
        self.controller = WeatherController(self.ui)
        
        # Verbinde den Button mit der Funktion im Controller
        self.ui.weather_button.clicked.connect(self.controller.get_weather)
        
        # Farbverlauf und zusätzliche Styles (ergänzt deine UI-Styles)
        self.setStyleSheet("""
            QMainWindow {
                background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                    stop: 0 #FFC1CC, stop: 1 #D81B60);
            }
            QPushButton {
                background-color: #FF6F91;
                color: #FFFFFF;
                border: 2px solid #D81B60;
                padding: 5px;
                border-radius: 5px;
            }
            QLineEdit {
                background-color: #FFE4E6;
                color: #D81B60;
                border: 2px solid #FF6F91;
                border-radius: 5px;
                padding: 2px;
            }
            QLabel {
                color: #D81B60;
                font-size: 14px;
            }
        """)

if __name__ == "__main__":
    app = QApplication(sys.argv)
    window = WeatherApp()
    window.show()
    sys.exit(app.exec())
